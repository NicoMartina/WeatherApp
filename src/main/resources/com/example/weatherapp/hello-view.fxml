<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.weatherapp.WeatherController" spacing="10" alignment="CENTER">
  <TextField fx:id="locationField" promptText="Enter location" />
  <Button fx:id="searchButton" text="Get Weather" onAction="#handleSearchButtonAction" />
  <ImageView fx:id="weatherIcon" fitWidth="100" fitHeight="100" />
  <Label fx:id="temperatureLabel" text="Temperature" style="-fx-font-size: 18;" />
  <Label fx:id="conditionLabel" text="Condition" style="-fx-font-size: 14;" />
  <Label fx:id="humidityLabel" text="Humidity" style="-fx-font-size: 14;" />
  <Label fx:id="windSpeedLabel" text="Wind Speed" style="-fx-font-size: 14;" />
  <VBox fx:id="forecastContainer" spacing="5" alignment="CENTER">
    <!-- Forecast items will be dynamically added here -->
  </VBox>
</VBox>
